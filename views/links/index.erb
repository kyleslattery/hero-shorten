<form action="/-/create" method="post" class="new_url">
  <h2>Create a new short URL</h2>
  <input type="text" name="url" />
  <input type="submit" value="Go" />
</form>

<table>
  <tr>
    <th>Short</th>
    <th>Full</th>
  </tr>

  <% @links.each do |link| %>
  <tr>
    <td><a href="/<%= link.slug %>"><%= link.slug %></a></td>
    <td><a href="<%= link.url %>"><%= link.url %></a></td>
  </tr>
  <% end %>
</table>